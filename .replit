run = "python start_replit.py"
entrypoint = "start_replit.py"
modules = ["python-3.12", "bash", "nix"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "xcodebuild", "zlib"]

[deployment]
run = ["sh", "-c", "python start_replit.py"]

[env]
PYTHONPATH = "${PWD}:${PWD}/backend"

[interpreter]
command = ["python3", "-u", "start_replit.py"]

[agent]
expertMode = true

[[ports]]
localPort = 8000
externalPort = 80

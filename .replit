run = "python start_replit.py"
entrypoint = "start_replit.py"
modules = ["bash", "nix", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "xcodebuild", "zlib"]

[deployment]
run = ["sh", "-c", "python start_replit.py"]

[env]
PYTHONPATH = "${PWD}:${PWD}/backend"

[interpreter]
command = ["python3", "-u", "start_replit.py"]

[agent]
expertMode = true
integrations = ["python_openai:1.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python start_replit.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
